<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_watched"
            style="@style/HomeButton"
            android:drawableTop="@drawable/btn_watched"
            android:text="@string/watchhome" />

        <Button
            android:id="@+id/btn_acquired"
            style="@style/HomeButton"
            android:drawableTop="@drawable/btn_acquired"
            android:text="@string/acquirehome" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_coming"
            style="@style/HomeButton"
            android:drawableTop="@drawable/btn_coming"
            android:text="@string/coming" />

        <Button
            android:id="@+id/btn_settings"
            style="@style/HomeButton"
            android:drawableTop="@drawable/btn_settings"
            android:onClick="onManageClick"
            android:text="@string/manageShows" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_logout"
            style="@style/HomeButton"
            android:drawableTop="@drawable/btn_logout"
            android:onClick="onLogoutClick"
            android:text="@string/logout" />

        <Button
            android:id="@+id/btn_more"
            style="@style/HomeButton"
            android:drawableTop="@drawable/btn_more"
            android:text="@string/more" />
    </LinearLayout>
</LinearLayout>
